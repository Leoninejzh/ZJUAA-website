generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model UploadedImage {
  id        String   @id @default(cuid())
  filename  String
  url       String
  alt       String?
  category  String?
  createdAt DateTime @default(now())
}

model Article {
  id            String    @id @default(cuid())
  title         String
  content       String
  coverImageUrl String?
  type          String
  eventDate     DateTime?
  sortOrder     Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
