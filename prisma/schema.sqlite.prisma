// 本地开发用 SQLite（当 DATABASE_URL 为 file: 时）
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model UploadedImage {
  id        String   @id @default(cuid())
  filename  String
  url       String
  alt       String?
  category  String?
  createdAt DateTime @default(now())
}

model Article {
  id            String    @id @default(cuid())
  title         String
  content       String
  coverImageUrl String?
  type          String
  eventDate     DateTime?
  sortOrder     Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Donation {
  id             String   @id @default(cuid())
  amount         Float
  name           String
  email          String
  graduationYear String
  major          String
  message        String?
  paymentMethod  String
  createdAt      DateTime @default(now())
}
